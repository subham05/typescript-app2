<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
    </style>

    <!-- Starting Launcher theme -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.DayNight.NoActionBar">>
        <item name="android:windowBackground">@drawable/layout</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
    <!-- Starting Launcher React native theme -->
    <style name="AppTheme.ReactNativeLuncher" parent="Theme.AppCompat.DayNight.NoActionBar" >
       <item name="android:statusBarColor">@color/primary</item>
    </style>
    <style name="Dialog.Theme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>
